<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="184.0" prefWidth="295.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.haynes.pomodoro.PomodoroController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <TextField fx:id="tfTask" promptText="Enter a task" />
            <Label fx:id="lbTimer" text="25:00" />
            <Button fx:id="btStart" onAction="#startAction" text="Start" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="12.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="rbPomodoro" mnemonicParsing="false" text="Pomodoro" />
            <RadioButton fx:id="rbShortBreak" mnemonicParsing="false" text="Short Break" />
            <RadioButton fx:id="rbLongBreak" mnemonicParsing="false" text="Long Break" />
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
